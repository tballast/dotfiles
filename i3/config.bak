# USER DEFINED

#exec --no-startup-id compton -cCGfF -o 0.38 -O 200 -I 200 -t 0 -l 0 -r 3 -D2 -m 0.88

exec --no-startup-id nitrogen --restore
exec compton -CGb

# Sublime on Error
bindsym $win+g exec $scripts_dir/subl_clip.py

# VOLUME CONTROL CRAP
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id $scripts_dir/volume.sh + #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id $scripts_dir/volume.sh - #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id $scripts_dir/volume.sh t # mute sound

bindsym --release Print exec --no-startup-id /home/tballast/.config/i3/screenshot.py

bindsym Control+Mod1+l exec /home/tballast/.config/i3/i3lock-fancy-multimonitor/lock

bindsym --whole-window Pause exec --no-startup-id xdotool key --delay 250 --clearmodifiers Return shift+asciitilde period

# Monitor Shutdown
exec --no-startup-id xset dpms 600

# M$EXCHANGE SHIZNAT
exec --no-startup-id systemctl --user start i3.target
bindsym $win+t exec python3 ~/.i3/msexchangeclient.py todays-meetings

